<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/img_bgr_ac_second"
    tools:context=".Activity_second">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!--Button chuyển activity 1-->
        <Button
            android:id="@+id/btnBackAcFirst"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:backgroundTint="#DC143C"
            android:padding="14dp"
            android:text="@string/backactivityfirst"
            android:textSize="28sp" />
        <!--Second Activity-->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:gravity="center"
            android:text="@string/tvactivitysecond"
            android:textColor="#0A5998"
            android:textSize="50sp" />
        <!--content Activity-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:background="@drawable/bordertxtsecond"
            android:gravity="center"
            android:padding="20dp"
            android:text="@string/tvsecond"
            android:textColor="@color/black"
            android:textSize="40sp" />
        <!-- My ìnfo-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/myinf"
            android:textAllCaps="true"
            android:textColor="#4912CA"
            android:textSize="42sp" />
    </LinearLayout>
</RelativeLayout>